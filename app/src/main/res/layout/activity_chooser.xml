<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grdnt"
    android:orientation="vertical"
    tools:context=".chooser">


    <android.support.v7.widget.CardView
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_265sdp"
        android:layout_margin="@dimen/_10sdp"
        app:cardBackgroundColor="@color/startblue"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/Volunteer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Vol"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/_10sdp"
                android:src="@drawable/vol1" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Vol"
                android:layout_centerHorizontal="true"
                android:text="Volunteer"
                android:textColor="@color/graylight"
                android:textSize="@dimen/_30sdp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/c2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_265sdp"
        android:layout_below="@+id/c1"
        android:layout_margin="@dimen/_10sdp"
        app:cardBackgroundColor="@color/startblue"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/Restaurant"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Res"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/_10sdp"
                android:src="@drawable/res1" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Res"
                android:layout_centerHorizontal="true"
                android:text="Restaurant"
                android:textColor="@color/graylight"
                android:textSize="@dimen/_30sdp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>